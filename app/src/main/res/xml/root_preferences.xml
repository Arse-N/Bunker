<PreferenceScreen
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory>

        <SwitchPreferenceCompat
                app:key="gender"
                app:title="@string/include_gender"
                app:summaryOn="@string/included_gender_summary"
                app:summaryOff="@string/not_included_gender_summary"/>
    </PreferenceCategory>

    <PreferenceCategory>
        <Preference
                app:key="share"
                app:title="@string/share"/>

        <Preference
                app:key="rate"
                app:title="@string/rate"/>

        <Preference
                app:key="report_bug"
                app:title="@string/report_bug"/>

    </PreferenceCategory>

</PreferenceScreen>
