<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        tools:context=".fragments.CardFlipFragment"
        android:background="@color/brown">
    <TextView
            android:id="@+id/card_name"
            android:text="Թմակից 1"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:padding="5dp"
            android:layout_gravity="center_horizontal"
            android:textAlignment="center"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="64dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/mainCard"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            app:layout_constraintTop_toBottomOf="@+id/card_name"
            android:layout_marginTop="35dp"
            app:layout_constraintBottom_toTopOf="@+id/next_button"
            android:layout_marginBottom="80dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cardBack"
                android:layout_width="330dp"
                android:layout_height="452dp"
                android:maxHeight="452dp"
                android:maxWidth="330dp"
                android:background="@drawable/card_background"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">
            <ImageView
                    android:id="@+id/danger1"
                    android:layout_width="195dp"
                    android:layout_height="195dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/danger" app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cardFront"
                android:layout_width="330dp"
                android:layout_height="452dp"
                android:maxHeight="452dp"
                android:maxWidth="330dp"
                android:translationZ="-10dp"
                android:background="@drawable/card_front_side"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                    android:id="@+id/profession"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="15dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp">
                <TextView
                        android:id="@+id/profession_title"
                        android:text="@string/profession"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:padding="5dp"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:id="@+id/profession_value"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:padding="5dp"
                        android:textAlignment="center"
                        android:textStyle="italic"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        app:layout_constraintStart_toStartOf="@id/profession_title"/>
            </LinearLayout>
            <LinearLayout
                    android:id="@+id/age"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toBottomOf="@+id/profession"
                    android:layout_marginEnd="15dp" android:layout_marginTop="25dp">
                <TextView
                        android:id="@+id/age_title"
                        android:text="@string/age"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:padding="5dp"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:id="@+id/age_value"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:padding="5dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:textAlignment="center"
                        android:textStyle="italic"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        app:layout_constraintStart_toStartOf="@id/age_title"/>
            </LinearLayout>
            <LinearLayout
                    android:id="@+id/phobia"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/age" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="25dp" android:layout_marginEnd="15dp">
                <TextView
                        android:id="@+id/phobia_title"
                        android:text="@string/phobia"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:padding="5dp"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:id="@+id/phobia_value"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:padding="5dp"
                        android:textAlignment="center"
                        android:textStyle="italic"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        app:layout_constraintStart_toStartOf="@id/phobia_title"/>
            </LinearLayout>
            <LinearLayout
                    android:id="@+id/illness"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toBottomOf="@+id/phobia"
                    android:layout_marginTop="25dp">
                <TextView
                        android:id="@+id/illness_title"
                        android:text="@string/illness"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:padding="5dp"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:id="@+id/illness_value"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:padding="5dp"
                        android:textAlignment="center"
                        android:textStyle="italic"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        app:layout_constraintStart_toStartOf="@id/illness_title"/>
            </LinearLayout>
            <LinearLayout
                    android:id="@+id/baggage"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="15dp" app:layout_constraintTop_toBottomOf="@+id/illness"
                    android:layout_marginTop="25dp">
                <TextView
                        android:id="@+id/baggage_title"
                        android:text="@string/baggage"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:id="@+id/baggage_value"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:padding="5dp"
                        android:textAlignment="center"
                        android:textStyle="italic"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        app:layout_constraintStart_toStartOf="@id/baggage_title"/>
            </LinearLayout>
            <LinearLayout
                    android:id="@+id/add_info"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="15dp"
                    app:layout_constraintTop_toBottomOf="@+id/baggage" android:layout_marginTop="25dp">
                <TextView
                        android:id="@+id/add_info_title"
                        android:text="@string/add_info"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:padding="5dp"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:id="@+id/add_info_value"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:padding="5dp"
                        android:textAlignment="center"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:textStyle="italic"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        app:layout_constraintStart_toStartOf="@id/add_info_title"/>
            </LinearLayout>
            <ImageView
                    android:id="@+id/danger2"
                    android:layout_width="113dp"
                    android:layout_height="113dp"
                    android:layout_gravity="center_horizontal"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="15dp"
                    android:src="@drawable/danger"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="15dp"/>
            <ImageView
                    android:id="@+id/qrCodeImageView"
                    android:layout_width="113dp"
                    android:layout_height="113dp"
                    android:layout_gravity="center_horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="15dp"
                    android:layout_marginEnd="15dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
    <Button
            android:id="@+id/next_button"
            android:text="@string/next"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_width="112.44dp"
            android:layout_height="55dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/button_background"
            app:layout_constraintEnd_toEndOf="parent"
            android:visibility="gone"
            android:translationZ="200dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="50dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>