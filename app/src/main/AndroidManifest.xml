<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
            android:allowBackup="true"
            android:dataExtractionRules="@xml/data_extraction_rules"
            android:fullBackupContent="@xml/backup_rules"
            android:icon="@drawable/bunker_logo"
            android:label="@string/app_name"
            android:roundIcon="@drawable/bunker_logo"
            android:supportsRtl="true"
            android:theme="@style/Theme.Bunker"
            tools:targetApi="31">

        <activity
                android:name=".activities.RulesActivity"
                android:exported="false"
                android:screenOrientation="portrait"
                android:theme="@style/Theme.Bunker"/>

        <activity
                android:name=".activities.SettingsActivity"
                android:exported="false"
                android:screenOrientation="portrait"
                android:theme="@style/Theme.Bunker"/>

        <activity
                android:name=".activities.TeamActivity"
                android:exported="false"
                android:screenOrientation="portrait"
                android:theme="@style/Theme.Bunker"/>

        <activity
                android:name=".activities.MenuPageActivity"
                android:exported="false"
                android:screenOrientation="portrait"
                android:theme="@style/Theme.Bunker"/>

        <activity
                android:name=".activities.CardFlipActivity"
                android:exported="false"
                android:screenOrientation="portrait"
                android:theme="@style/Theme.Bunker"/>

        <activity
                android:name=".MainActivity"
                android:exported="false"
                android:screenOrientation="portrait"
                android:theme="@style/Theme.Bunker"/>

        <activity
                android:name=".activities.LoadingActivity"
                android:exported="true"
                android:screenOrientation="portrait"
                android:theme="@style/Theme.Bunker">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
    </application>

</manifest>
